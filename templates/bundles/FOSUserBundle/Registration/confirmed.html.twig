{% extends "@FOSUser/layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style>.big-btn{
            padding: 10px 0px 11px 0px;
            width: 215px;
            margin-top:5px;
        }

        .big-btn i{
            font-size: 65px;
            margin-right: 0px !important;
        }
        .big-btn strong{
            font-size: 25px;
            text-shadow: 1px 2px 0px #34659B;
            color: #fff;
            line-height: 24px;
        }
        .big-btn .btn-text{
            margin-top:6px;
        }

        .big-btn small{font-size: 75%;}

        .android-btn{

            width: 240px;
            padding: 13px 17px 13px 0px;
            background-color: #000;
            border-color: #000;

        }
        .android-btn:hover{
            background-color: #272727;
        }

        .android-btn i{
            font-size: 55px;
        }

        .android-btn .btn-text{
            margin-top: 0px;
        }

        .android-btn strong{
            font-size: 25px;
            text-shadow: none;
            color: #fff;
            line-height: 24px;
        }</style>
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-12">
            <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
            <h2>Welkom bij het Team!</h2>
            <h4>Join onze App:</h4>
            <p>
                <ul>
                    <li>Geef je op als test user.</li>
                    <li>Download en installeer de app.</li>
                    <li>Open de app en login met je gegevens.</li>
                </ul>
            </p>
            <!-- android button -->
            <a class="btn btn-lg btn-success big-btn android-btn" href="https://play.google.com/store/apps/details?id=org.nativescript.XApp">
                <img width="80px" class="pull-left" src="http://www.userlogos.org/files/logos/jumpordie/google_play_04.png"><div class="btn-text"><small>Available on</small><br><strong>Google Play</strong></div></a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% if targetUrl %}
                <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
            {% endif %}
        </div>
    </div>


{% endblock fos_user_content %}
